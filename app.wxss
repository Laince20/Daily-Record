/**app.wxss**/
page {
  height: 100%;
  font-size: 16px;
  line-height: 1.6;
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0;
  background-color: #fff;
}

/* 头像和占位图样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.avatar-placeholder {
  background-color: #e0e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.summary-icon-placeholder,
.empty-icon-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  margin: 20rpx 0;
}

/* 箭头和控制图标 */
.arrow-text {
  font-size: 28rpx;
  color: #1aad19;
  margin-left: 10rpx;
}

.dropdown-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.mic-text {
  color: #fff;
  font-size: 24rpx;
}

/* 消息气泡样式 */
.message-bubble {
  max-width: 70%;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  word-wrap: break-word;
}

.user-message {
  background-color: #1aad19;
  color: #fff;
  align-self: flex-end;
  margin-right: 20rpx;
  border-top-right-radius: 0;
}

.ai-message {
  background-color: #f1f1f1;
  color: #333;
  align-self: flex-start;
  margin-left: 20rpx;
  border-top-left-radius: 0;
}

.btn-primary {
  background-color: #1aad19;
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  margin: 30rpx 0;
}

.btn-secondary {
  background-color: #f1f1f1;
  color: #666;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  margin: 30rpx 0;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.text-center {
  text-align: center;
}

.padding {
  padding: 30rpx;
}

.margin {
  margin: 30rpx;
}

.divider {
  height: 1px;
  background-color: #eee;
  width: 100%;
  margin: 20rpx 0;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 20rpx;
} 