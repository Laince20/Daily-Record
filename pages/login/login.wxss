.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background-color: #f8f8f8;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.app-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.login-content {
  width: 85%;
  padding: 50rpx 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slogan {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 50rpx;
  line-height: 1.5;
}

.features {
  width: 100%;
  margin-bottom: 60rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon {
  margin-right: 15rpx;
}

.feature-item text {
  font-size: 28rpx;
  color: #444;
  line-height: 1.4;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 12rpx rgba(7, 193, 96, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-btn.loading {
  opacity: 0.8;
}

.privacy-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

.highlight {
  color: #07c160;
} 