/* pages/history/history.wxss */
.container {
  padding: 30rpx;
  height: 100vh;
  background-color: #f8f8f8;
}

.header {
  padding: 20rpx 0 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 日历样式 */
.calendar-container {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.month-text {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.calendar-controls {
  display: flex;
}

.control-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 10rpx;
  color: #666;
}

.calendar-week {
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 16rpx;
  margin-bottom: 16rpx;
}

.calendar-weekday {
  width: 14.28%;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day-container {
  width: 14.28%;
  padding: 10rpx 0;
  text-align: center;
}

.calendar-day {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  font-size: 28rpx;
  color: #333;
}

.today {
  background-color: #e8f6e8;
  color: #1aad19;
}

.has-summary {
  font-weight: 500;
}

.summary-dot {
  position: absolute;
  bottom: 6rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #1aad19;
}

.other-month {
  opacity: 0.4;
}

/* 总结内容样式 */
.summary-container {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.date-display {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.summary-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.view-more {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #1aad19;
  font-size: 28rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 