/* pages/summary/summary.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 0;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.nav-actions {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  padding: 10rpx;
}

.iconfont {
  font-size: 38rpx;
  color: #666666;
}

/* 日期选择器样式 */
.date-selector {
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.date-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
  background-color: #f0f2f5;
}

.date-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.icon-calendar {
  color: #666666;
}

/* AI总结区域样式 */
.summary-section {
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.main-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.content-block {
  margin-bottom: 40rpx;
}

.sub-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 15rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  margin-bottom: 15rpx;
}

.thoughts-text {
  font-size: 26rpx;
  color: #888888;
  line-height: 1.6;
  padding: 15rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #4a90e2;
}

/* 会话列表区域样式 */
.sessions-section {
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.sessions-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.session-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.session-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.session-time {
  font-size: 24rpx;
  color: #999999;
  background-color: #f5f7fa;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.session-preview {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.session-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.session-tag {
  font-size: 24rpx;
  color: #4a90e2;
  background-color: #f0f7ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.icon-arrow-right {
  color: #999999;
  font-size: 28rpx;
}

/* 空状态样式 */
.summary-pending, .summary-generating, .summary-empty, .sessions-empty {
  padding: 40rpx 0;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}

/* 内容区域样式 */
.content-container {
  flex: 1;
  padding: 30rpx;
}

/* 对话结束样式 */
.end-chat-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.summary-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.end-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 40rpx;
}

.message-list-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  align-self: flex-start;
  margin-bottom: 20rpx;
}

.message-list {
  width: 100%;
}

.message-item {
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.user-message-item {
  background-color: #f0f9eb;
  border-left: 6rpx solid #1aad19;
}

.ai-message-item {
  background-color: #f7f7f7;
  border-left: 6rpx solid #999;
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.message-sender {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
}

.message-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 日常总结样式 */
.date-picker {
  margin-bottom: 30rpx;
}

.picker-view {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.summary-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.summary-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  margin-bottom: 30rpx;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 30rpx 0;
}

.session-list {
  margin-top: 20rpx;
}

.session-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.session-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.session-preview {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 30rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 按钮区域样式 */
.action-container {
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.btn-primary {
  background-color: #1aad19;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
} 